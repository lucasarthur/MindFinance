<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#98FB98"
            android:padding="16dp">

            <TextView
                android:id="@+id/tv_greeting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Olá,"
                android:textColor="@android:color/black"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_alterar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="alterar"
                android:textColor="#555555"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="@+id/tv_greeting"
                app:layout_constraintStart_toEndOf="@+id/tv_greeting" />

            <TextView
                android:id="@+id/tv_saldo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Saldo:"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_greeting" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_historico"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Histórico"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                app:backgroundTint="@android:color/black"
                app:cornerRadius="20dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:background="@android:color/transparent"
                    android:text="Contas fixas"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="none">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="16dp"
                            android:gravity="center_horizontal"
                            android:orientation="vertical">
                            <ImageView
                                android:id="@+id/iv_fixa_1"
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:background="#E0E0E0"
                                android:scaleType="centerCrop"/>
                            <TextView
                                android:id="@+id/tv_fixa_1"
                                android:layout_width="80dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:gravity="center_horizontal"
                                android:text="VAZIO"
                                android:textColor="@android:color/black"
                                android:textSize="14sp" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="16dp"
                            android:gravity="center_horizontal"
                            android:orientation="vertical">
                            <ImageView
                                android:id="@+id/iv_fixa_2"
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:background="#E0E0E0"
                                android:scaleType="centerCrop"/>
                            <TextView
                                android:id="@+id/tv_fixa_2"
                                android:layout_width="80dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:gravity="center_horizontal"
                                android:text="VAZIO"
                                android:textColor="@android:color/black"
                                android:textSize="14sp" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="16dp"
                            android:gravity="center_horizontal"
                            android:orientation="vertical">
                            <ImageView
                                android:id="@+id/iv_fixa_3"
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:background="#E0E0E0"
                                android:scaleType="centerCrop"/>
                            <TextView
                                android:id="@+id/tv_fixa_3"
                                android:layout_width="80dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:gravity="center_horizontal"
                                android:text="VAZIO"
                                android:textColor="@android:color/black"
                                android:textSize="14sp" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="16dp"
                            android:gravity="center_horizontal"
                            android:orientation="vertical">
                            <ImageView
                                android:id="@+id/iv_fixa_4"
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:background="#E0E0E0"
                                android:scaleType="centerCrop"/>
                            <TextView
                                android:id="@+id/tv_fixa_4"
                                android:layout_width="80dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:gravity="center_horizontal"
                                android:text="VAZIO"
                                android:textColor="@android:color/black"
                                android:textSize="14sp" />
                        </LinearLayout>
                    </LinearLayout>
                </HorizontalScrollView>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_gerenciar_fixas"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="16dp"
                    android:text="Ver mais ou Gerenciar"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"
                    app:backgroundTint="#98FB98"
                    app:cornerRadius="8dp" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:background="@android:color/transparent"
                    android:text="Contas não fixas"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="none">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="16dp"
                            android:gravity="center_horizontal"
                            android:orientation="vertical">
                            <ImageView
                                android:id="@+id/iv_nao_fixa_1"
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:background="#E0E0E0"
                                android:scaleType="centerCrop"/>
                            <TextView
                                android:id="@+id/tv_nao_fixa_1"
                                android:layout_width="80dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:gravity="center_horizontal"
                                android:text="VAZIO"
                                android:textColor="@android:color/black"
                                android:textSize="14sp" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="16dp"
                            android:gravity="center_horizontal"
                            android:orientation="vertical">
                            <ImageView
                                android:id="@+id/iv_nao_fixa_2"
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:background="#E0E0E0"
                                android:scaleType="centerCrop"/>
                            <TextView
                                android:id="@+id/tv_nao_fixa_2"
                                android:layout_width="80dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:gravity="center_horizontal"
                                android:text="VAZIO"
                                android:textColor="@android:color/black"
                                android:textSize="14sp" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="16dp"
                            android:gravity="center_horizontal"
                            android:orientation="vertical">
                            <ImageView
                                android:id="@+id/iv_nao_fixa_3"
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:background="#E0E0E0"
                                android:scaleType="centerCrop"/>
                            <TextView
                                android:id="@+id/tv_nao_fixa_3"
                                android:layout_width="80dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:gravity="center_horizontal"
                                android:text="VAZIO"
                                android:textColor="@android:color/black"
                                android:textSize="14sp" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="16dp"
                            android:gravity="center_horizontal"
                            android:orientation="vertical">
                            <ImageView
                                android:id="@+id/iv_nao_fixa_4"
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:background="#E0E0E0"
                                android:scaleType="centerCrop"/>
                            <TextView
                                android:id="@+id/tv_nao_fixa_4"
                                android:layout_width="80dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:gravity="center_horizontal"
                                android:text="VAZIO"
                                android:textColor="@android:color/black"
                                android:textSize="14sp" />
                        </LinearLayout>
                    </LinearLayout>
                </HorizontalScrollView>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_gerenciar_nao_fixas"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="16dp"
                    android:text="Ver mais ou Gerenciar"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"
                    app:backgroundTint="#98FB98"
                    app:cornerRadius="8dp" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:background="@android:color/transparent"
                    android:text="Objetivos"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="none">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="16dp"
                            android:gravity="center_horizontal"
                            android:orientation="vertical">
                            <ImageView
                                android:id="@+id/iv_meta_1"
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:background="#E0E0E0"
                                android:scaleType="centerCrop"/>
                            <TextView
                                android:id="@+id/tv_meta_1"
                                android:layout_width="80dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:gravity="center_horizontal"
                                android:text="VAZIO"
                                android:textColor="@android:color/black"
                                android:textSize="14sp" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="16dp"
                            android:gravity="center_horizontal"
                            android:orientation="vertical">
                            <ImageView
                                android:id="@+id/iv_meta_2"
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:background="#E0E0E0"
                                android:scaleType="centerCrop"/>
                            <TextView
                                android:id="@+id/tv_meta_2"
                                android:layout_width="80dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:gravity="center_horizontal"
                                android:text="VAZIO"
                                android:textColor="@android:color/black"
                                android:textSize="14sp" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="16dp"
                            android:gravity="center_horizontal"
                            android:orientation="vertical">
                            <ImageView
                                android:id="@+id/iv_meta_3"
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:background="#E0E0E0"
                                android:scaleType="centerCrop"/>
                            <TextView
                                android:id="@+id/tv_meta_3"
                                android:layout_width="80dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:gravity="center_horizontal"
                                android:text="VAZIO"
                                android:textColor="@android:color/black"
                                android:textSize="14sp" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="16dp"
                            android:gravity="center_horizontal"
                            android:orientation="vertical">
                            <ImageView
                                android:id="@+id/iv_meta_4"
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:background="#E0E0E0"
                                android:scaleType="centerCrop"/>
                            <TextView
                                android:id="@+id/tv_meta_4"
                                android:layout_width="80dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:gravity="center_horizontal"
                                android:text="VAZIO"
                                android:textColor="@android:color/black"
                                android:textSize="14sp" />
                        </LinearLayout>
                    </LinearLayout>
                </HorizontalScrollView>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_gerenciar_metas"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="16dp"
                    android:text="Ver mais ou Gerenciar"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"
                    app:backgroundTint="#98FB98"
                    app:cornerRadius="8dp" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>
</ScrollView>
